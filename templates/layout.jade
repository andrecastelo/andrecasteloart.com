doctype html
block vars
    - var bodyclass = null;
html(lang='en')
    head
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(name='viewport', content='width=device-width')
            title
                block title
                    = locals.name
            link(rel="stylesheet", href='css/bootstrap.min.css')
            link(rel='stylesheet', href='css/style.css')
    body(class=bodyclass)
        div#main.container
            .header
                .row
                    a(href=locals.url)
                        h1.col-sm-6
                            img(src="images/header.png", alt="").img-responsive
                    .col-sm-6
                        span.header-link-wrapper
                            a(href='https://www.facebook.com/andrecasteloillustration').header-link.hidden-xs.redlink Facebook
                            a(href="http://twitter.com/andrecastelo").header-link.hidden-xs.redlink Twitter
                            a(href="mailto:andrecastelo@gmail.com").header-link.redlink andrecastelo@gmail.com
                //- .row
                //-     .col-xs-12
                //-         .menubar
                //-             ul
                //-                 li.page_item
                //-                     a(href="/portfolio.html") Portfolio
                //-                 li.page_item
                //-                     a(href="/blog.html") Blog
                //-                 li.page_item
                //-                     a(href="/hireme.html") Hire me

            div#id.content
                block content

            #footer.top-line
                .copyright
                    p Copyright &copy; 2009-#{ new Date().getFullYear() } &nbsp;&nbsp;
                        a(href="http://www.andrecasteloart.com").redlink #{ locals.owner }

